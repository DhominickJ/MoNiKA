{
    "version": 2,
    "builds": [
      {
        "src": "src/main.js",
        "use": "@vercel/node"
      },
      {
        "src": "/package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/src/(.*)",
        "dest": "/src/main.js"
      },
      {
        "src": "^/static/(.*)",
        "dest": "/client/static/$1"
      },
      {
         "src": "/(.*)\\.png",
         "dest": "/client/$1.png"
       },
      {
        "src": "/(.*)",
        "dest": "/client/index.html"
      }
    ]
  }